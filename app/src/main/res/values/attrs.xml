<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BGATitleBar">
        <!-- 项目中把下面这五项定义在styles.xml里 -->
        <attr name="bgatitlebar_leftAndRightTextColor" format="reference|color"/>
        <attr name="bgatitlebar_titleTextColor" format="reference|color"/>
        <attr name="bgatitlebar_leftAndRightTextSize" format="reference|dimension"/>
        <attr name="bgatitlebar_leftSecondTextSize" format="reference|dimension"/>
        <attr name="bgatitlebar_leftSecondTextColor" format="reference|color"/>
        <attr name="bgatitlebar_titleTextSize" format="reference|dimension"/>
        <attr name="bgatitlebar_leftAndRightPadding" format="reference|dimension"/>

        <!-- 下面这几项更具每个页面的业务写在layout中 -->
        <attr name="bgatitlebar_leftText" format="reference|string"/>
        <attr name="bgatitlebar_leftSecondText" format="reference|string"/>
        <attr name="bgatitlebar_rightText" format="reference|string"/>
        <attr name="bgatitlebar_rightSecondaryText" format="reference|string"/>
        <attr name="bgatitlebar_titleText" format="reference|string"/>
        <attr name="bgatitlebar_leftDrawable" format="reference"/>
        <attr name="bgatitlebar_leftSecondDrawable" format="reference"/>
        <attr name="bgatitlebar_titleDrawable" format="reference"/>
        <attr name="bgatitlebar_rightDrawable" format="reference"/>
        <attr name="bgatitlebar_rightSecondaryDrawable" format="reference"/>
        <!-- 当既有titleText，又有titleDrawable时，设置该属性 -->
        <attr name="bgatitlebar_titleDrawablePadding" format="reference|dimension"/>
        <!-- 当既有leftText，又有leftDrawable时，设置该属性 -->
        <attr name="bgatitlebar_leftDrawablePadding" format="reference|dimension"/>
        <!-- 当既有rightText，又有rightDrawable时，设置该属性 -->
        <attr name="bgatitlebar_rightDrawablePadding" format="reference|dimension"/>
        <!-- 下面三项通常情况下不用，使用默认值就好。某个界面标题特别长并且左右文字短或者左右文字特别长并且标题特别短时单独配置 -->
        <attr name="bgatitlebar_leftMaxWidth" format="reference|dimension"/>
        <attr name="bgatitlebar_rightMaxWidth" format="reference|dimension"/>
        <attr name="bgatitlebar_titleMaxWidth" format="reference|dimension"/>
        <!-- 标题文字是否为粗体，默认为true -->
        <attr name="bgatitlebar_isTitleTextBold" format="boolean"/>
        <!-- 左边文字是否为粗体，默认为false -->
        <attr name="bgatitlebar_isLeftTextBold" format="boolean"/>
        <!-- 右边文字是否为粗体，默认为false -->
        <attr name="bgatitlebar_isRightTextBold" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="JPTabBar">
        <attr name="TabNormalColor" format="reference|color"/>
        <attr name="TabSelectColor" format="reference|color"/>
        <attr name="TabSelectBg" format="reference|color"/>
        <attr name="TabTextSize" format="dimension|reference"/>
        <attr name="TabIconSize" format="dimension|reference"/>
        <attr name="TabIconFilter" format="boolean"/>
        <attr name="TabMargin" format="dimension|reference"/>
        <attr name="TabAnimate" format="enum">
            <enum name="Flip" value="1"/>
            <enum name="Rotate" value="2"/>
            <enum name="Scale" value="3"/>
            <enum name="Jump" value="4"/>
            <enum name="None" value="5"/>
        </attr>
        <attr name="TabMiddleBottomDis" format="dimension|reference"/>
        <attr name="TabMiddleView" format="reference"/>
        <attr name="TabMiddleHMargin" format="dimension|reference"/>
        <attr name="BadgeColor" format="reference|color"/>
        <attr name="BadgePadding" format="dimension|reference"/>
        <attr name="BadgeTextSize" format="reference|dimension"/>
        <attr name="BadgeVerticalMargin" format="reference|dimension"/>
        <attr name="BadgeHorizonalMargin" format="reference|dimension"/>
    </declare-styleable>
    <declare-styleable name="SideBar">
        <attr name="sidebar_lazy_respond" format="boolean"/>
        <attr name="sidebar_text_size" format="dimension"/>
        <attr name="sidebar_text_color" format="color"/>
        <attr name="sidebar_max_offset" format="dimension"/>
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ProgressLayout">
        <attr name="progressLoadingStateBackgroundColor" format="color" />
        <attr name="progressEmptyStateBackgroundColor" format="color" />
        <attr name="progressErrorStateBackgroundColor" format="color" />
    </declare-styleable>



    <declare-styleable name="cbprogressbar">
        <!-- 进度百分比文字大小 -->
        <attr name="percent_text_size" format="dimension" />
        <!-- 圆形进度条边框大小 -->
        <attr name="stroke_width" format="dimension" />
        <!-- 矩形进度条 四周圆角大小 -->
        <attr name="rect_round" format="dimension" />
        <!-- 矩形进度条 是空心样式还是实心样式 -->
        <attr name="isHorizonStroke" format="boolean" />
        <!-- 进度百分比文字颜色 -->
        <attr name="percent_text_color" format="color|integer" />
        <!-- 进度条背景颜色 -->
        <attr name="progressBarBgColor" format="color|integer" />
        <!-- 扇形进度条颜色 -->
        <attr name="sectorColor" format="color|integer" />
        <!-- 扇形背景颜色 -->
        <attr name="unSweepColor" format="color|integer" />
        <!-- 进度颜色 -->
        <attr name="progressColor" format="color|integer" />
        <!-- 进度文字是否显示百分号 -->
        <attr name="showPercentSign" format="boolean"/>
        <!-- 进度条样式圆形还是矩形 -->
        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="sector" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="stl_SmartTabLayout">
