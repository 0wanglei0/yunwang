<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgWhite"
    android:layout_gravity="center"
    android:splitMotionEvents="false">

    <FrameLayout
        android:id="@+id/layout_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_margin="@dimen/dp40"
        android:layout_height="400dp"
        android:layout_width="600dp"
        android:layout_centerHorizontal="true">
        <com.rave.yunwang.widget.CustomVideoView
            android:id="@+id/view_video_preview"
            android:layout_width="@dimen/dp300"
            android:layout_height="450dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/press_mask" />

    <TextView
        android:id="@+id/tv_video_record_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/press_mask"
        android:textColor="@color/color_red_ccfa3c55"
        android:textSize="20sp"
        tools:text="xxxx" />

    <ImageView
        android:id="@+id/iv_record_operator"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@mipmap/ic_take_photo" />

    <LinearLayout
        android:id="@+id/layout_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/hint_superscript_style"
            android:gravity="center"
            android:src="@drawable/choose" />

        <ImageButton
            android:id="@+id/btn_Re_shoot"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hint_superscript_style"
            android:src="@drawable/reshoot"
            android:scaleType="center"
            android:layout_marginStart="@dimen/dp80"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>